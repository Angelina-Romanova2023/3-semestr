  {'type': 'eq', 'fun': lambda x: -2*x[0] + x[1] - 2},  # = 2
  {'type': 'ineq', 'fun': lambda x: 3*x[1] + 4*x[1] + 6}   # >= -6
)
# Выполнение оптимизации
