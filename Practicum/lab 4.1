import numpy as np
import matplotlib.pyplot as plt
from mpl_toolkits.mplot3d import Axes3D


# 1
def func(x):
    return np.sin(2 * x) / np.cos(x)


a = 2
b = 3
x = np.linspace(a, b, 100)
y = func(x)
print(*y)

# %%

